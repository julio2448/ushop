<section class="title">
  <h1>Welcome to U-SHOP</h1>
  <p>Search for coupons perfect for saving money</p>
</section>
<section class="search" data-controller="map" data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  <div class="search-inner" style="margin-bottom: 30px">


    <a href="/coupons" class="search-button">
      <i class="ai-search"></i>
    </a>
    <input type="text" class="search-input" placeholder="Search for products" />

    <button id="globe-button" class="btn secondary btn-lg globe" aria-label="Globe" data-action="click->map#toggleMap">
        <i class="fas fa-globe fa-fw" ></i>
    </button>



  </div>
  <div
    class="d-none"
    style="width: 100%; height: 600px;"
    data-map-target="imgmap"
    >
    hola
  </div>
</section>




<nav class="navigation">
  <a href="#" class="navigation-item active">Near You</a>
  <a href="#" class="navigation-item">My Coupons</a>
</nav>

<div class="card-container">
  <div class="row row-cols-3">
    <% @coupons.each do |coupon| %>
      <article class="card col">
        <div class="card-inner">

          <div class="card-image">
            <img src="https://assets.iflscience.com/assets/articleNo/50863/iImg/48507/1544028330-46162315-2208445412552773-8381301981456629760-n.jpg" />
          </div>
          <div class="card-content">
            <div class="card-meta">
              <span class="card-subtitle"><%= coupon.title %></span>
              <button class="card-meta-button">
                <i class="ai-circle-triangle-right-fill"></i>
              </button>
            </div>
            <h2 class="card-title"><%= coupon.product_name %></h2>
          </div>
        </div>
      </article>
    <% end %>
  </div>
</div>

<%=link_to coupons_path %>
