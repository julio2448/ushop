<div style="margin-bottom: 70px;">
  <h1>ENTER INFO FOR YOUR NEW COUPON</h1>
  <%= simple_form_for [@coupon] do |f| %>
    <%= f.input :title %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :product_name %>
    <%= f.input :product_description %>
    <%= f.input :code %>
    <%= f.input :address, placeholder: "Enter your exact address" %>
    <%= f.label :ai_image, "Use AI to generate image" %>
    <%= f.check_box :ai_image %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>
  <%= link_to "Cancel", :back, class: "bttn" %>
</div>
