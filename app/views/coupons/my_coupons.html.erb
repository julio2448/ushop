<section class="posted-coupons" style="margin-bottom: 60px; margin-top: 70px;">
  <% @my_coupons.each do |coupon|%>
    <article class="card horizontal">
      <div class="card-inner">
        <div class="card-image">
          <img src="https://assets.codepen.io/285131/pink-pastel-juicy-banana.jpg" />
        </div>
        <div class="card-content">
          <% if coupon.available?%>
            <div class="card-meta">
              <span class="card-meta-artist"><%= link_to coupon.title, coupon_path(coupon) %></span>
            </div>
            <h2 class="card-title">Hate the Other Side
              <span class="card-time"><%= coupon.time_left_days%> Days For Your Coupon to Expire</span>
            </h2>
          <% else %>
            <li class= "col-6"><%= link_to coupon.title, coupon_path(coupon) %></li>
            <h3 class = "col-6 text-danger">This coupon has expired</h3>
          <%end%>
        </div>
      </div>
    </article>
  <% end %>
</section>

<div class="button-container" style="margin-top: 100px; margin-bottom: 100px; margin-left: 35px; padding: 5px;">
  <%= link_to "New Coupon", new_coupon_path, class: "bttn" %>
  <%= link_to "Back to all coupons",root_path , class: "bttn"%>
</div>
